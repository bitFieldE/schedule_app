<div class="container-fluid py-3">
  
  <h2 class="pt-5 pb-3">スケジュール一覧</h2>
  
  <% if notice %>
    <p id="notice" class="info col-4"><%= notice %></p>
  <% end %>
  <table class="col-md-10 col-sm-12 schedules-list">
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
  
    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.id %></td>
          <td><%= schedule.title %></td>
          <td><%= schedule.start_date&.strftime('%Y年%m月%d日') %></td>
          <td><%= schedule.end_date&.strftime('%Y年%m月%d日') %></td>
          <td><%= schedule.week_end == true ? "○" : "" %></td>
          <td><%= schedule.updated_at&.strftime('%Y年%m月%d日 %H時%M分') %></td>
          <td><%= link_to '確認', schedule %></td>
          <td><%= link_to '編集', edit_schedule_path(schedule) %></td>
          <td><%= link_to '削除', schedule, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    
  <p class="pt-3">
    <%= link_to 'スケジュール新規登録', new_schedule_path %>
  </p>
</div>
